<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
  <div class="cards grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-10">
    <% posts.forEach(function(elem) { %>
      <div class="card w-full">
        <div class="w-full h-40 bg-sky-200 rounded-lg overflow-hidden">
    
          <a href="/feed/post/<%= elem._id %>">
            <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>" alt="<%= elem.title %>">
          </a>
        </div>
        <h5 class="mt-2 text-sm"><%= elem.title %></h5>
      </div>
    <% }) %>
  </div>
</div>
<% include ./partials/footer.ejs %>
