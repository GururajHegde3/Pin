<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
  <div class="w-full max-w-4xl mx-auto">
    <div class="w-full h-96 bg-sky-200 rounded-lg overflow-hidden">

      <img class="w-full h-full object-cover" src="/images/uploads/<%= post.image %>" alt="<%= post.title %>">
    </div>
 
    <h1 class="mt-4 text-3xl font-bold">Title : <%= post.title %></h1>

    <p class="mt-2 text-lg">Description : <%= post.description %></p>
    <a class="inline-block mt-10 mx-8  px-3 py-2 bg-red-700 rounded-full" href="/feed">Go Back</a>
  </div>
</div>

