<%include ./partials/header.ejs %>
<div class="container w-full min-h-screen bg-zinc-800 pt-1 text-white">
    <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="image">
    </form>
    <div class="profdets  flex flex-col items-center mt-20">
        <div class="relative">
            <span id="uploadicon" class="w-8 h-8 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200">
                <i class="ri-edit-2-fill text-zinc-800"></i>
            </span>
            <div class="w-32 h-32 bg-zinc-100 rounded-full overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImage %>" alt="">
            </div>
        </div>
       
        <h1 class="text-3xl font-semibold"><%=user.username%></h1>
       

        <a href="/add"  class="mt-4 font-semibold px-10 py-2 rounded-lg bg-red-700">Add New Post</a> 
    </div>
    <div class="cards flex flex-wrap gap-10 px-10 mt-10">
        <div class="card">

        <div class="w-52 h-52 bg-zinc-200 rounded-lg overflow-hidden ">
           <a href="/show/posts"> <img class="w-full h-full object-cover " src="/images/uploads/<%=user?.posts[0]?.image %>" alt=""></a>
        </div>
        <a href="/show/posts" class="inline-block text-xl font-semibold mt-3 opacity-90 text-white">Your Pins</a>
        <h5 class="text-white font-medium opacity-90"><%= user.posts.length %></h5>
    </div>

    </div>

</div>
<script>
  // Trigger the file input when the upload icon is clicked
document.querySelector("#uploadicon").addEventListener("click", function () {
    document.querySelector("#uploadform input").click();
});

// Listen for file selection, then submit the form
document.querySelector("#uploadform input").addEventListener("change", function () {
    if (this.files.length > 0) {  // Check if a file is selected
        document.querySelector("#uploadform").submit();
    } else {
        alert('Please select a file before uploading.');
    }
});

</script>
<%include ./partials/footer.ejs %>